<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:scrollbars="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Schimba imaginea de profil:"
                android:textColor="#FFF"
                android:textStyle="bold" />

            <ImageView
                android:layout_gravity="center"
                android:id="@+id/edit_image"
                android:background="#FFC107"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="100dp"
                android:src="@drawable/photo_black_24dp" />

            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/save_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#4CAF50"
                android:layout_weight="3"
                android:hint="SAVE"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:id="@+id/edit_textSUS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedByDefault="false"
            android:hint="Editeaza textul (info/parte sus)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:background="#4CAF50"
                android:id="@+id/settings_getTextSus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:hint="Afiseaza"
                android:textStyle="bold" />

            <Button
                android:background="#4CAF50"
                android:id="@+id/settings_setTextSus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:hint="Salveaza"
                android:textStyle="bold" />
        </LinearLayout>

        <EditText


            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="#FFF"
            android:textColorHint="#FFF"
            android:id="@+id/edit_textJOS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusedByDefault="false"
            android:hint="Editeaza textul (info/parte jos)" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:background="#4CAF50"
                android:id="@+id/settings_getTextJOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:hint="Afiseaza"
                android:textStyle="bold" />

            <Button
                android:background="#4CAF50"
                android:id="@+id/settings_setTextJOS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="3"
                android:hint="Salveaza"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>